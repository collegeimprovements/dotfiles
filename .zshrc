#================================================================================
# HomeBrew
#================================================================================
dotbrew(){
    rm $HOME/Brewfile
    brew bundle dump --file=$HOME/Brewfile
    dot add $HOME/Brewfile
    dot commit -m "updates brewfile"
}

updatebrew(){
    brew update
    brew upgrade
}

brewit(){
    brew cleanup
    brew update 
    brew upgrade
}

#================================================================================
# HomeBrew - END
#================================================================================

